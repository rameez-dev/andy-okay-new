<aside class="NewsletterPopup site__black--popup soldout-popup gallery-experience-choose" data-section-id="{{ section.id }}" data-section-type="newsletter-popup" aria-hidden="true">
  <div class="popup_header">
    <span class="popup_title">Passe Partout</span>
    <button class="popup_close" data-action="close-popup" aria-label="{{ 'general.popup.close' | t }}">{% include 'icon' with 'close' %}</button>
  </div>     
{% comment %} <button class="NewsletterPopup__Close site__black--close" data-action="close-popup" aria-label="{{ 'general.popup.close' | t }}">{% include 'icon' with 'close' %}</button> {% endcomment %}  
    <div class="popup_content">  
      {%- if section.settings.image != blank -%}
        <div>
          <img style="margin-bottom: 20px;" src="{{ section.settings.image | img_url: 'master' }}" alt="gallery-mat">
        </div>
      {%- endif -%}
  
      {% comment %}
      {%- if section.settings.title != blank -%}
        <h2 class="NewsletterPopup__Heading Heading u-h2">
          {{section.settings.title}}
        </h2>
      {%- endif -%}
      {% endcomment %}
        
      {%- if section.settings.content != blank -%}
        <div class="NewsletterPopup__Content">
          <p>{{section.settings.content}}</p>
          {%- if section.settings.link_text != blank -%}
            <a href="{{ section.settings.link }}" class="pop__content--link">{{ section.settings.link_text | escape }}</a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </aside>
    
    <script>
      $(document).ready(function(){
      $('.gallery-experience-choose .popup_close').click(function(){
        $('.gallery-experience-choose').removeClass('visible');
        document.getElementById("cart-popup-overlay").style.display = "none";
      });
    });
    </script>
    
    {% schema %}
    {
      "name": "Gallery Experience Pop-up",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Popup"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>You can use this popup to display some useful information to your customers.</p>"
        },
        {
          "id": "link_text",
          "type": "text",
          "label": "Link Text"
        },
        {
          "id": "link",
          "type": "url",
          "label": "URL/Link"
        }
      ]
    }
    {% endschema %}
    