{%- if section.settings.show == true -%}
{% for block in section.blocks %}
{%- if block.settings.show == true -%}
{%- if page.handle == block.settings.handle -%}
  <div class="banner-section banner" style="background-image: url({{block.settings.image | img_url: 'master'}});">
    <div class="banner-content">
      {% assign number = block.settings.number | times: 1 %}
      <h2 class="SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h1 content-heading" style="color: {{section.settings.heading-color}}"><span class="tree-count" data-treecount="0">{{number}}</span></h2>
      <div class="SectionHeader__SubHeading Heading u-h6 content-detail" style="color: {{block.settings.text-color}}">
        {{block.settings.text}}
      </div>
      <p></p>
    </div>
  </div>
{%- endif -%}
{%- endif -%}
{%endfor%}
{%endif%}
<script>
  
  $({ Counter: 0 }).animate({
    Counter: $('.tree-count').text()
      }, {
    duration: 3000,
    easing: 'swing',
    step: function() {
      $('.tree-count').text(Math.ceil(this.Counter));
    }
  });
</script>
