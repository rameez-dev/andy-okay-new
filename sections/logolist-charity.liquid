{%- if section.settings.show == true -%}
{% for block in section.blocks %}
{%- if block.settings.show == true -%}
{%- if page.handle == block.settings.handle -%}
<div class="section-details" style="background-color: {{block.settings.backgroud-color}}">
  <div class="section-details-holder">
    <h3 class="SectionHeader__Heading Heading u-h2 details-heading" style="color: {{block.settings.text-color}}">{{ block.settings.text}}</h3>
  </div>
  <ul class="section-details-list">
    {% for block in block.image %}
    {%- if page.handle == block.settings.handle -%}
      <li class="section-detail">
        <img class="section-logo-img" src="{{block.settings.image | img_url: 'master'}}">
      </li>
    {%- endif -%}
    {% endfor %}
    {% for block in block.image-2 %}
    {%- if page.handle == block.settings.handle -%}
      <li class="section-detail">
        <img class="section-logo-img" src="{{block.settings.image | img_url: 'master'}}">
      </li>
    {%- endif -%}
    {% endfor %}
    {% for block in block.image-3 %}
    {%- if page.handle == block.settings.handle -%}
      <li class="section-detail">
        <img class="section-logo-img" src="{{block.settings.image | img_url: 'master'}}">
      </li>
    {%- endif -%}
    {% endfor %}
  </ul>
</div>
{%endif%}
{%- endif -%}
{%endfor%}
{%endif%}

