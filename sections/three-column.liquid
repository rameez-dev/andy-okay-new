<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>		
{%- if section.settings.show == true -%}
<div class="point-section" style="background-color: {{section.settings.backgroud-color}}">
  <ul class="point-list">
    {% for block in section.blocks %}
      <li class="list-items">
        <div class="items-holder">
          <h4 class="SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h4 item-heading" style="color: {{block.settings.text-color}}">{{ block.settings.heading }}</h4>
          <div class="SectionHeader__SubHeading Heading u-h6 item-detail" style="color: {{block.settings.text-color}}">
            {{ block.settings.paragraph }}
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
{%endif%}
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>

if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
 $(".point-list").slick({
    centerMode: true,
    prevArrow:"<img class='a-left control-c prev slick-prev' src='//cdn.shopify.com/s/files/1/0014/3015/9418/t/11/assets/left-arrow.png?3976639222319904941'>",
    nextArrow:"<img class='a-right control-c next slick-next' src='//cdn.shopify.com/s/files/1/0014/3015/9418/t/11/assets/right-arrow.png?3976639222319904941'>",
    centerPadding: '60px',
    slidesToShow: 1,
    responsive: [
      {
        breakpoint: 640,
        settings: {
          arrows: true,
          centerMode: true,
          centerPadding: '40px',
          slidesToShow: 1
        }
      }
    ]
  });
}
</script>
{% schema %}
  { 
    "name":"Three Column",
    
    "settings": [
      {
        "id": "backgroud-color",
        "type": "color",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "checkbox",
        "id": "show",
        "label": "Show",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "Points",
        "limit": 3,
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "Heading"
          },
          {
            "id": "paragraph",
            "type": "richtext",
            "label": "Content"
          },
          {
            "id": "text-color",
            "type": "color",
            "label": "Text color",
            "default": "#000000"
          }
        ]
      }
    ],
    "presets": [
    {
      "category": "Text",
      "name": "Three column"
    }
  ]
}
{% endschema %}