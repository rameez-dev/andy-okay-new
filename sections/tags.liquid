<div class="tags-section simple-tags-section">
  <div class="tags-section-holder">
    <div class="Section--spacingHeading">
      <header class="SectionHeader SectionHeader--center">
        <div class="Container featured-new-header">
          <div class="SectionHeader__Heading_Container">
            <h2 class="SectionHeader__Heading Heading u-h1 featured-heading">
              {{ section.settings.title }}     	
              {%- if section.settings.subtitle != blank -%}
                <br>
                <span class="SectionHeader__SubHeading Heading u-h6 featured-subheading" style="color: {{ section.settings.subtitle_color }}">{{ section.settings.subtitle | escape }}</span>
              {%- endif -%}
            </h2>
          </div>
        </div>
      </header>
    </div>
    <div class="Container">
      {% comment %} <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title }}</h2> {% endcomment %}
      <div class="links-section">
        {% for block in section.blocks %}
          
        {% assign index = forloop.index | modulo:7 %}

          {% if index == 1 %}
            <div class="links-holder">
          {% endif %}

          <a href="{{ block.settings.url }}" class="Button Button--secondary Button--custom" style="background-color: {{ block.settings.filling_color}}; color: {{ block.settings.text_color}}; border-color: {{ block.settings.filling_color}};">{{ block.settings.label }}</a>
          
          {% if index == 0 or forloop.last == true %}
            </div>
          {% endif %}
        
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Tags",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub-Title"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Sub-Title Color"
    }
  ],
  "blocks": [
    {
      "type": "tag",
      "name": "Tag",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Tag label"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "id": "filling_color",
          "type": "color",
          "label": "Filling color",
          "default": "#03021c"
        },
        {
          "id": "text_color",
          "type": "color",
          "label": "Filling Text Colr",
          "default": "#FFFFFF"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Tags",
      "settings": {}
    }
  ]
}
{% endschema %}