<style>
.new-card-item {
    display: flex;
    width: 100%;
    background-color: #f0ecea;
    border-top: 1px solid #c1c1c1;
    border-bottom: 1px solid #c1c1c1;
    padding: 50px 80px;
}
.new-card-header {
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
}
.newcard-heading {
    font-family: 'DIN Next LT Pro Bold';
    font-size: 20px;
    margin-bottom: 30px;
    text-transform: uppercase;
}
.new-card-img {
    height: 30px;
    object-fit: contain;
}
.new-card-content {
    flex-basis: 50%;
    font-family: 'Adobe Caslon Pro';
}
.new-card-content a{
    text-decoration: underline;
    text-underline-offset: 4px;
}
@media only screen and (max-width: 768px) {
    .new-card-item {
        flex-direction: column;
        padding: 50px 30px;
    }
    .new-card-header {
        margin-bottom: 20px;
    }
    .newcard-heading {
        margin-bottom: 20px;
    }
}
@media only screen and (min-width: 641px) {
    .new-cards-cont {
        margin-top: -45px;
    }
}
</style>

<div class="new-cards-cont">
    {% for block in section.blocks %}
        <div class="new-card-item">
            <div class="new-card-header">
                <div class="newcard-heading">{{ block.settings.heading }}</div>
                <img class="new-card-img" src="{{ block.settings.image |  image_url: height: 100 }}">
            </div>
            <div class="new-card-content">{{ block.settings.content }}</div>
        </div>
    {% endfor %}
</div>

{% schema %}
    { 
      "name":"New Cards Section",
      "settings": [
      ],
      "blocks": [
        {
          "type": "card",
          "name": "card",
          "settings": [
            {
              "id": "image",
              "type": "image_picker",
              "label": "Image"  
            },
            {
              "type": "text",
              "id": "heading",
              "label": "Heading"
            },
            {
              "type": "richtext",
              "id": "content",
              "label": "Content"
            }
          ]
        }
      ],
      "presets": [
        {
        "name": "New Cards Section"
        }
      ]
    }
    {% endschema %}